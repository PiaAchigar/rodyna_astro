---
import cruz_color2 from "../../public/cruz_color2.svg";
import CaserosPage from "../pages/caseros_page.astro";
---

<div id="container">
	<!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
	<main>
		<section id="hero">
			<img
				src={cruz_color2.src}
				width="500"
				height="250"
				alt="Logo Rodyna Farmacias"
			/>
			<h1>Rodyna Farmacias</h1>
			<section id="links">
				<a class="button" href="/src/components/Caseros">Caseros</a>
				<a class="button" href="../pages/caseros_page.astro">Liniers</a>
				<a class="button" href="../pages/caseros_page.astro">Rio</a>
				<a class="button" href="../pages/caseros_page.astro">Palermo</a>
				<a class="button_menu" href="../pages/about_page.astro">About</a>
			</section>
		</section>
	</main>
</div>

<style>
	:root {
		--color-primario: #5ebc00;
		--color-secundario: #9ccc64;
		--color-terciario: #186e3c;
		--acento: #ffd148;
		--color-negro: black;
		--color-blanco: white;
		--color-gris-claro: #646c71;
		--color-gris-oscuro: #1c1f1f;
		--color-confirmacion: #115500;
		--color-loader: #adadad;
		--color-btn-confirm: #71b636;
		--color-btn-confirm-hover: #8359f593;
	}
	/* #background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		/* filter: blur(100px); 
	} */
	@font-face {
		font-family: "Philosopher"; /* El nombre que le dar√°s a tu fuente */
		src: url("/public/fonts/Philosopher-Bold.ttf") format("truetype"); /* La ruta a tu archivo .ttf */
		font-weight: bold; /* Si es una variante bold */
		font-style: normal;
		font-display: swap; /* Para un mejor manejo de la carga de fuentes */
	}
	#container {
		/* font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif; */
		font-family: "Philosopher";
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		font-size: 80px;
		margin-top: 0.25em;
		color: var(--color-primario);
		font-weight: bolder;
	}

	#links {
		display: flex;
		gap: 16px;
		font-family: url("../assets/tipografia_aller/other/Aller_It.ttf");
	}

	#links a {
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a svg {
		height: 1em;
		margin-left: 8px;
	}

	#links a.button {
		color: var(--color-gris-oscuro);
		background: linear-gradient(
			90deg,
			var(--color-secundario) 0%,
			var(--color-gris-claro) 100%
		);
		box-shadow:
			inset 0 0 0 1px var(--color-gris-claro),
			inset 0 -3px 3px var(--color-gris-oscuro);
		border-radius: 10px 25px;
		padding: 20px 50px;
	}

	#links a.button:hover {
		color: rgb(228, 231, 228);
		box-shadow: none;
		background: linear-gradient(
			90deg,
			var(--color-gris-claro) 0%,
			var(--color-secundario) 100%
		);
	}

	a.button_menu {
		box-shadow:
			inset 0 0 0 1px var(--color-gris-claro),
			inset 0 -3px 3px var(--color-gris-oscuro);
		border-radius: 10px 25px;
		padding: 20px 50px;
	}

	h2 {
		margin: 0 0 1em;
		font-weight: normal;
		color: #111827;
		font-size: 20px;
	}

	p {
		color: #4b5563;
		font-size: 16px;
		line-height: 24px;
		letter-spacing: -0.006em;
		margin: 0;
	}
	/* 
	code {
		display: inline-block;
		background:
			linear-gradient(66.77deg, #d0e9ce 0%, #4ad314 100%) padding-box,
			linear-gradient(155deg, #174b07 0%, #2cd60a 18%, #247224 45%) border-box;
		border-radius: 8px;
		border: 1px solid transparent;
		padding: 6px 8px;
	} */

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

		h1 {
			line-height: 1.5;
			font-size: 55px;
			text-align: center;
		}
	}

	@media screen and (max-width: 540px) {
		#container {
			width: 100%;
			height: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
		}
		main {
			height: 100%;
			height: 100%;
			/* display: flex;
			flex-direction: column; */
			margin: auto;
		}

		#hero {
			padding-top: none;
			margin: 1px 10px;
		}

		#links {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin: auto;
		}

		.button {
			text-align: center;
			width: 70%;
			padding: 15px 30px;
			font-size: 40px;
		}

		h1 {
			line-height: 1;
			font-size: 50px;
			text-align: center;
		}
	}
</style>
